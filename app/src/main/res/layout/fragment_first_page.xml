<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".ui.fragments.FirstPageFragment">

    <LinearLayout
        android:id="@+id/first_page_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_space"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_page_text_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_picture_height" />


        <ImageView
            android:id="@+id/first_page_children_picture"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/children_picture_height"
            android:contentDescription="@string/children_picture"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/first_page_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/first_page_test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
